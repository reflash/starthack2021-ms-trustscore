{
    "compilerOptions": {
        "sourceMap": true,
        "target": "es2018",
        "outDir": "./dist",
        "baseUrl": "./src",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "importHelpers": true,
        "pretty": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2018",
            "dom"
        ]
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}

